<Window x:Class="RemD.Views.ConnectView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False" Topmost="True" Height="93" Width="281" >
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        
        <TextBlock Text="Address" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" />
        <TextBox Text="{Binding Address, Mode=TwoWay}" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Center" />
        <Button Content="Connect" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" x:Name="Connect"/>
    </Grid>
</Window>
